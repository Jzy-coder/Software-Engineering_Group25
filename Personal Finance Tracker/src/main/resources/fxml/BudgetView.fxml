<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finance.controller.BudgetController">
  <top>
    <VBox alignment="TOP_LEFT" styleClass="card">
      <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
      </padding>
      <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Add" styleClass="button" onAction="#handleAddBudget"/>
        <Button text="Remove" styleClass="button" onAction="#handleRemoveBudget"/>
      </HBox>
      <Label text="Budget Management" styleClass="label-heading"/>
      <Label fx:id="budgetBalanceLabel" text="Budget Balance: 0.00"/>
    </VBox>
  </top>

  <center>
    <VBox spacing="20" alignment="CENTER">
      <!-- 单个预算显示区域 -->
      <VBox fx:id="singleBudgetContainer" spacing="10" alignment="CENTER" styleClass="card">
        <padding>
          <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
      </VBox>

      <!-- Plan 区域 -->
      <VBox spacing="10" alignment="CENTER" styleClass="card">
        <ListView fx:id="planListView" prefHeight="150"/>
        <HBox spacing="10">
          <Button text="Add Plan" onAction="#handleAddPlan"/>
          <Button text="Remove Plan" onAction="#handleRemovePlan"/>
        </HBox>
      </VBox>

      <!-- 原输入表单（位置调整） -->
      <GridPane fx:id="inputGrid" visible="false" vgap="10" hgap="10" alignment="CENTER" styleClass="card">
        <!-- 保留原有输入字段 -->
      </GridPane>
    </VBox>
  </center>
</BorderPane>
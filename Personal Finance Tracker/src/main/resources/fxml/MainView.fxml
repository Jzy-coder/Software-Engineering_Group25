<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.finance.controller.MainController">
    <left>
        <!-- Navigation Sidebar -->
        <VBox styleClass="sidebar" prefWidth="200">

            <Button text="Welcome" styleClass="sidebar-button" 
                    prefWidth="180" prefHeight="40" onAction="#showWelcomeView" />

            <Button text="Income/Expense" styleClass="sidebar-button" 
                    prefWidth="180" prefHeight="40" onAction="#showIncomeExpenseView" />
            <Button text="Budget" styleClass="sidebar-button" 
                    prefWidth="180" prefHeight="40" onAction="#showBudgetView" />
            <Button text="Financial Analysis" styleClass="sidebar-button" 
                    prefWidth="180" prefHeight="40" onAction="#showAnalysisView" />
            <Button text="Investment Portfolio" styleClass="sidebar-button" 
                    prefWidth="180" prefHeight="40" onAction="#showInvestmentView" />
            <Button text="AI Chat" styleClass="sidebar-button" 
                    prefWidth="180" prefHeight="40" onAction="#showAIChatView" />
            <Button text="Settings" styleClass="sidebar-button" 
                    prefWidth="180" prefHeight="40" onAction="#showSettingsView" />
        </VBox>
    </left>
    <center>
        <!-- Content Area -->
        <StackPane fx:id="contentArea" />
    </center>
</BorderPane>

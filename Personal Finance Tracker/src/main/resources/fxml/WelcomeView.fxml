<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.finance.controller.WelcomeController">
    <VBox spacing="20" alignment="CENTER" layoutX="50" layoutY="50" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50">
        <!-- 用户欢迎语 -->
        <Label fx:id="userNameLabel" text="Hi, User's Name ~" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <!-- 总支出 -->
        <Label fx:id="totalTodayExpenditureLabel" text="Today's total expenditure is: 0.00 yuan" style="-fx-font-size: 18px;" />

        <!-- 余额 -->
        <Label fx:id="balanceLabel" text="Your balance is: 0.00 yuan short of your deposit target." style="-fx-font-size: 18px;" />

        <!-- 添加标题文本 -->
        <Label text="This is your transaction record for today" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <!-- 支出明细（包裹在HBox中居中） -->
        <HBox alignment="CENTER">
            <TableView fx:id="expenditureDetailsTable" prefWidth="500" style="-fx-font-size: 16px;">
                <columns>
                    <!-- 固定列宽并禁止调整 -->
                    <TableColumn fx:id="amountColumn" text="Amount" prefWidth="150" resizable="false" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150" resizable="false" style="-fx-alignment: CENTER;"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="200" resizable="false" style="-fx-alignment: CENTER;"/>
                </columns>
            </TableView>
        </HBox>
    </VBox>
</AnchorPane>
